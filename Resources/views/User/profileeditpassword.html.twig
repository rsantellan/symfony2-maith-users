<div class="row">
  <div class="col-lg-8">
	<section class="panel">
	  <header class="panel-heading">{% trans %}users_update_profile{% endtrans %}</header>
	  <div class="panel-body">
        <form action="{{ path('user_edit_profile_password') }}" method="post" {{ form_enctype(edit_form) }} role="form" onsubmit="return saveProfileEditData(this);">
			<input type="hidden" name="_method" value="PUT" />
			<div class="form-group">
			  {{ form_errors(edit_form.current_password) }}
			  <label for="{{ edit_form.current_password.vars.id }}">{% trans %}users_current_password{% endtrans %}</label>
			  {{ form_widget(edit_form.current_password, {'attr' : {'class' : 'form-control'}}) }}
			</div>
			<div class="form-group">
			  {{ form_errors(edit_form.plainPassword.pass1) }}
			  <label for="{{ edit_form.plainPassword.pass1.vars.id }}">{% trans %}users_new_password{% endtrans %}</label>
			  {{ form_widget(edit_form.plainPassword.pass1, {'attr' : {'class' : 'form-control'}}) }}
			</div>
            <div class="form-group">
			  {{ form_errors(edit_form.plainPassword.pass2) }}
			  <label for="{{ edit_form.plainPassword.pass2.vars.id }}">{% trans %}users_repeat_new_password{% endtrans %}</label>
			  {{ form_widget(edit_form.plainPassword.pass2, {'attr' : {'class' : 'form-control'}}) }}
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-default">{% trans %}users_save_change_password{% endtrans %}</button>
			</div>
			{{ form_rest(edit_form) }}
		</form>
	  </div>
	</section>
  </div>
</div>
